<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/md_grey_900</item>
        <item name="android:statusBarColor">@color/md_grey_900</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/AppTheme.ToolBar</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
     </style>
    <style name="AppTheme.TabText" parent="TextAppearance.AppCompat.Medium">
         <item name="android:textAllCaps">true</item>
        <item name="android:padding">5dp</item>
         <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>
    <style name="AppTheme.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/md_grey_900</item>
            <item name="android:elevation">1dp</item>
        <item name="titleTextAppearance">@style/AppTheme.ToolbarTitle</item>
      </style>
    <style name="AppTheme.ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Dialog_No_Border">
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Animation</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>


    <style name="AppTheme.Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>
</resources>
